{
  "name": "LuoguNoticer",
  "version": "0.1",
  "manifest_version": 2,
  "author": "Himself65",
  "description": "A Chrome Plugin on luogu.org to show notices",
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "Luogu Notice",
    "default_popup": "popup.html"
  },
  "background": {
    "script": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["cookies", "tabs", "http://*/*", "https://*/*"],
  "homepage_url": "http://himself65.com"
}
